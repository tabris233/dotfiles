# export PATH=$HOME/.local/bin:$PATH

eval "$(zoxide init zsh)"


# custom.sh
[[ -f $HOME/.custom.sh ]] && source $HOME/.custom.sh
source "${XDG_CONFIG_HOME:-$HOME/.config}/asdf-direnv/zshrc"

